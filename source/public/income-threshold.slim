  .row
    .small-12.medium-6.columns
      .options.radio
        .option
          label for="income-amount-low"
            input id="income-amount-low" type="radio" name="income-amount" value="low"
            | Less than £<span class="threshold-lower">1,085</span>
        .option
          label for="income-amount-middle"
            input id="income-amount-middle" type="radio" name="income-amount" value="mid"
            | Between £<span class="threshold-lower">1,085</span> and £<span class="threshold-upper">5,085</span>
        .option
          label for="income-amount-high"
            input id="income-amount-high" type="radio" name="income-amount" value="high"
            | More than £<span class="threshold-upper">5,085</span>


  br
  .row
    .small-12.medium-6.columns
      a#next-url href="probate.html"
        .button.success Continue


  br
  .row
    .small-12.medium-7.large-6.columns
      a href='start.html'
        | Start a new application

javascript:
  $(document).ready( function() {
    buildNextUrl($('#income-amount-middle').is(':checked') ? 'income-detail.html' : 'probate.html');
    $('.refund-true').toggle(getValue('public', 'refund') == 'true');
    $('.refund-false').toggle(getValue('public', 'refund') != 'true');

    $('.partner').toggle(getValue('public', 'married').toString() == 'true');

    incomeThresholdModule.init();
  });
