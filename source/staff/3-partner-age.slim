javascript:
  $(document).ready( function() {
    buildNextUrl('4-benefits.html');
  });
  $("input[name='partnerOver61']").on('change', function () {
    var nextPage,
        fail = false;

    if ($("input[name='partnerOver61']:checked").val()=="false") {
      nextPage = '7-summary.html';
      fail = true;
    } else {
      nextPage = '4-benefits.html';
    }

    buildNextUrl(nextPage);
    $("#next-url").attr("href", updateQueryStringParameter('partnerOver61', $("input[name='partnerOver61']:checked").val()));
    if(fail) {
      $("#next-url").attr("href", updateQueryStringParameter('savings-exceeded',  'true'));
    }
  });
