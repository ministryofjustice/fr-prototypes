javascript:
  $(document).ready( function() {
    buildNextUrl('4-benefits.html');

    $('#next-url').on('click', function(e) {
      e.preventDefault();
      var $form = $(e.target).closest('form')[0];
      if($form.checkValidity()) {
        document.location = $('#next-url').attr('href');
      } else {
        $('<input type="submit">').hide().appendTo($form).click().remove();
      }
    });
  });
  $("input#savings-detail").on('change', function () {
    var $input = $("#savings-detail"),
        amount = parseInt($input.val(), 10),
        threshold = getUrlParameter('threshold'),
        nextPage = '4-benefits.html',
        fail = false;

    if(amount > threshold) {
      if(getUrlParameter('couple') === 'true') {
        nextPage = '3-partner-age.html';
      } else {
        nextPage = '7-summary.html';
        fail = true;
      }
    }

    buildNextUrl(nextPage);
    $("#next-url").attr("href", updateQueryStringParameter('savings-detail',  amount));
    if(fail) {
      $("#next-url").attr("href", updateQueryStringParameter('savings-exceeded',  'true'));
    }
  });
