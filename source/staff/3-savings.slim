javascript:
  $(document).ready( function() {
    $('#fee').text('£'+getUrlParameter('fee'));
    $('#age').text(getUrlParameter('age') + ' years old');
    $('#status').text(getUrlParameter('couple')=='false'?'Single':'Married or living with someone and sharing an income');
    $('#status-describe').text(getUrlParameter('couple')=='false' ? 'In question 7, how much do they have in savings and investments?' : 'In question 7, how much do they have in savings and investments?');
    $('#max-savings').text(getUrlParameter('age')>60?'£16,000': '£3,000');
    buildNextUrl('4-benefits.html');

    $("input[name='savings']").on('change', function () {
      if (getUrlParameter('couple') == 'true' && getUrlParameter('age') < 61) {
        $('#savings-more').toggleClass('hide', $("input[name='savings']:checked").val() == "false");
      }
      setNextPage();
    });
    $("input[name='age']").on('change', function () {
      $('#sixteen').toggleClass('hide', $("input[name='age']:checked").val() == "false");
      setNextPage();
      $("#next-url").attr("href", updateQueryStringParameter('savings-exceeded', $("input[name='age']:checked").val()=='false'));
      $("#next-url").attr("href", updateQueryStringParameter('over-61', $("input[name='age']:checked").val()=='true'));
    });

  });
  function setNextPage() {
    var jumpToSummary = false;
    if (getUrlParameter('couple') == 'true' && getUrlParameter('age')<61) {
      jumpToSummary = ($("input[name='savings']:checked").val() == 'true' && $("input[name='age']:checked").val() == 'false');
    } else {
      jumpToSummary = $("input[name='savings']:checked").val() == 'true';
    }
    buildNextUrl(jumpToSummary ? '7-summary.html' : '4-benefits.html');
  }
