javascript:
  $(document).ready( function() {
    buildNextUrl('4-benefits.html');
    storeValue('savings',  'low');
    storeValue('threshold',  calcThreshold());
  });
  $("input[name='savings-amount']").on('change', function () {
    var $opt = $("input[name='savings-amount']:checked");
    buildNextUrl($opt.data('next'));
    storeValue('savings',  $opt.data('savings'));
    storeValue('threshold',  calcThreshold());
    if($opt.data('savings') === 'high') {
      storeValue('savings-exceeded',  'true');
    }
  });
  function calcThreshold() {
    var threshold = 3000,
        bands = [
          [1000, 4000],
          [1335, 5000],
          [1665, 6000],
          [2000, 7000],
          [2330, 8000],
          [4000, 10000],
          [5000, 12000],
          [6000, 14000],
          [7000, 16000]
        ],
        fee = getUrlParameter('fee'),
        age = getUrlParameter('age');

    if(age && age > 60) {
      threshold = 16000;
    } else if(fee) {
      for(x in bands) {
        if(fee > bands[x][0]) {
          threshold = bands[x][1];
        }
      }
    }
    return threshold;
  }
