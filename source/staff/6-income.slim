.row
  .small-12.medium-8.large-5.columns
    button.button.primary.success#check_btn Next
    
#r2_calculator_result
  .row
    .columns.small-12.medium-12.large-11
      #calculator.callout
        h3.bold#fee-remit

  .row
    .small-12.columns
      a#next-url href="7-summary.html"
        .button.success Next


javascript:
  $(document).ready(function () {
    $('#fee').val(getUrlParameter('fee'));
    $("input[name='couple'][value='" + getUrlParameter('couple') + "']").prop("checked", true)
    buildNextUrl('7-summary.html');
    $("#next-url").attr("href", updateQueryStringParameter('calculator', 'true')).hide();

    $('#next-url').on('click', function () {
      var to_pay = escape($('#fee-remit').text());
      $("#next-url").attr("href", updateQueryStringParameter('to_pay', to_pay));
    });
    $("input[name='any-kids']").on('change', function () {
      $('#income-block').show();
      $('#child-block').toggleClass('hide', $("input[name='any-kids']:checked").val() == "false");
      if( $("input[name='any-kids']:checked").val() == "true") {
        $('#income-block > div.panel-indent').css("margin-top", "0px").css("padding-top","0px");
      } else {
        $('#income-block > div.panel-indent').css("margin-top", "10px").css("padding-top","10px");
      }
      $('#children').val(($("input[name='any-kids']:checked").val() == "false") ? '0' : '');
    });
    $('#children, #income').on('change', function() {
      var key = $(this).attr('id') ;
      var value =  $(this).val();
      $("#next-url").attr("href", updateQueryStringParameter(key, value));
    });
  });
